<Window x:Class="WPFView.Library.LibraryBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFView.Library"
        xmlns:ViewModel="clr-namespace:ShowCaseViewModel.Library;assembly=ShowCaseViewModel"
        mc:Ignorable="d"
        Title="LibraryBook" Height="450" Width="800">
    <Window.DataContext>
        <ViewModel:LibraryBookViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="Book">
                <TextBlock Text="{Binding Path=Title}"/>
            </DataTemplate>
            <DataTemplate x:Key="Combo">
                <TextBlock Text="{Binding Path=Name}"/>
            </DataTemplate>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">BookList</Label>
        <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="6" ItemsSource="{Binding Books, Mode=TwoWay}" ItemTemplate="{StaticResource ResourceKey=Book}" SelectedValue="{Binding SelectedBookID, Mode=TwoWay}" SelectedValuePath="Id" ></ListBox>
        <Label Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">Title:</Label>
        <Label Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">ISBN:</Label>
        <Label Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">Author:</Label>
        <Label Grid.Row="4" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">Publisher:</Label>
        <Label Grid.Row="5" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Bottom">Description</Label>
        <CheckBox FlowDirection="RightToLeft" Grid.Row="5" Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Center" IsEnabled="False">Is Borrowed</CheckBox>
        <TextBox Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding Title, Mode=TwoWay}"></TextBox>
        <TextBox Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Text="{Binding ISBN, Mode=TwoWay}"></TextBox>
        <ComboBox Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" ItemsSource="{Binding Authors, Mode=TwoWay}" ItemTemplate="{StaticResource ResourceKey=Combo}" SelectedValue="{Binding AuthorID, Mode=TwoWay}" SelectedValuePath="Id"></ComboBox>
        <ComboBox Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" ItemsSource="{Binding Publishers, Mode=TwoWay}" ItemTemplate="{StaticResource ResourceKey=Combo}" SelectedValue="{Binding PublisherID, Mode=TwoWay}" SelectedValuePath="Id"></ComboBox>
        <TextBox Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="3" Text="{Binding Description, Mode=TwoWay}"></TextBox>
        <Button Grid.Row="7" Grid.Column="0" Click="New_Click">New</Button>
        <Button Grid.Row="7" Grid.Column="1">Get</Button>
        <Button Grid.Row="7" Grid.Column="2">Remove</Button>
        <Button Grid.Row="7" Grid.Column="3">Add</Button>
        <Button Grid.Row="7" Grid.Column="4">Update</Button>
     </Grid>
</Window>
